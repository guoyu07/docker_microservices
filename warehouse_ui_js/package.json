{
  "name": "warehouse_ui_js",
  "version": "1.0.0",
  "description": "Sample AngularJS app",
  "main": "./src/js/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "http-server -a 0.0.0.0 -p 8000 -c-1 ./dist/",
    "clean": "rimraf dist",
    "init": "mkdir -p ./dist && cp ./src/index.html ./dist/",
    "build:js": "npm run init && browserify ./src/js/app.js -o ./dist/bundle.js",
    "build:js_minify": "bundle:js && uglifyjs ./dist/bundle.js -mc -o ./dist/bundle.js",
    "build:html": "npm run init && npm-html2js -i ./src/**/*.html -o ./dist/template.js -b src/js",
    "build": "npm run clean && npm run init && npm run build:js && npm run build:html"
  },
  "keywords": [
    "sample",
    "angular"
  ],
  "author": "sergey.maksymenko@gmail.com",
  "license": "ISC",
  "dependencies": {
    "angular": "^1.5.8",
    "angular-ui-router": "^0.3.1"
  },
  "devDependencies": {
    "browserify": "^13.1.1",
    "npm-html2js": "^0.1.8",
    "rimraf": "^2.5.4",
    "uglifyjs": "^2.4.10"
  }
}
